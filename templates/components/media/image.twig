{# >>>  Defaults #}
{% set defaults = {
  data: {
    name: 'c-image',
	id: '24',
	size: 'medium',
	top:'50',
	left:'50'
  },
  classes: {
    root: 'object-cover w-full h-full',
    custom: '',
  },
  variants: {
	none: '',
	square: '',
	video: ''
  }
} %}

{# >>> Merge data / classes / variants (optional) #}
{% set props = {
  data: data is defined and data is iterable ? defaults.data | merge(data) : defaults.data,
  classes: classes is defined and classes is iterable ? defaults.classes | merge(classes) : defaults.classes,
} %}

{% set styleAttr = 'object-position:'~ props.data.left ~'%' ~ ' ' ~ props.data.top~'%' %}

{{wp_get_attachment_image(props.data.id, props.data.size, '', { 'class' : props.classes.root, 'style': styleAttr, 'alt' : props.data.alttext })|raw}}
