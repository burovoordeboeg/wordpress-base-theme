{% set defaults = {
	data: {
		link: null,
		text: null,
		target: null,
		variant: 'default',
		color: 'primary',
		icon_alignment: 'right',
	},
	classes: {
		root: 'btn flex items-center justify-center inline-flex border-2 py-1.5 px-3 focus:outline-none rounded transition-colors duration-500',
		custom: 'asdasdasdasd',
	},


	variants: {
		default: {
			primary: 'default primary',
			secondary: 'default secondary',
		},
		outline: {
			primary: 'outline primary',
			secondary: 'outline secondary',
		},
		link: {
			primary: 'link primary',
			secondary: 'link secondary',
		}
	}
} %}

{% set props = {
	data: data is defined and data is iterable ? defaults.data | merge(data) : defaults.data,
	classes: classes is defined and classes is iterable ? defaults.classes | merge(classes) : defaults.classes,
	variants: defaults.variants,
} %}


