{# Basics #}
{% set tag 			= url ? 'a' : 'button' %}
{% set att 			= url ? 'href=' ~ url : 'type=button' %}
{% set target 		= target ? 'target=' ~ target : '' %}
{% set name 		= name ? name : 'c-button' %}
{% set pointer 		= is_preview ? 'pointer-events-none ' : '' %}
{% set style 		= style ? style : 'default' %}

{# Set classes #}
{% set classes = {
	base: name ~ ' ' ~ pointer ~ 'inline-flex items-center justify-center rounded px-4 py-3',
	default: 'text-black, bg-gray-200',
	primary: 'bg-teal-500 text-white'
} %}

{# Output #}
<{{tag}} {{ att }} {{ target }} {{blockname}} class="{{classes.base}} {{classes[style]}} {{class}}">

	{{ text }}

</{{tag}}>


