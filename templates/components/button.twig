{# Basics #}
{% set blockname 	= blockname ? 'data-block-id='~blockname : '' %}
{% set tag 			= url ? 'a' : 'button' %}
{% set att 			= url ? 'href=' ~ url : 'type=button' %}
{% set target 		= target ? 'target=' ~ target : '' %}
{% set pointer 		= is_preview ? 'pointer-events-none ' : '' %}

{# Set classes #}
{% set class = {
	base: pointer ~ 'inline-flex items-center justify-center rounded px-4 py-3 text-black',
	style: {
		'is-style-primary' : 'bg-red-500 text-white',
		'is-style-secondary' : 'bg-green-500 text-black',
		'is-style-link' : 'bg-transparent text-red-500',
	},
} %}

{# Output #}
<{{tag}} {{ att }} {{ target }} {{blockname}} class="{{class.base}} {{class.style[style]}}">

	{{ text }}

</{{tag}}>
