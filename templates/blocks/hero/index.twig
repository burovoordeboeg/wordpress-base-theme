{% extends "./blocks/wrapper-block.twig" %}

{% block content %}

	<div class="{{attributes.alignment.fullheight ? 'h-screen' : ' min-h-[40vh]'}} ">

		{{include('includes/wpimage.twig', {
			data: {
				id: fields.image,
				is_preview: is_preview,
			},
			classes: {
				custom:'absolute inset-0 h-full w-full object-cover z-0'
			}
		}, with_context = false)}}

		<div class="relative z-10">
			<div class="p-8">

				{{include('includes/heading.twig', { 
					data: { 
						text: fields.title.text, 
						type: fields.title.type 
					}
				}, with_context = false)}}

				{{include('includes/prose.twig', {
					data: {
						content: fields.copy,
					}
				}, with_context = false)}}

				{% if fields.button.button %}
					<div class="flex items-center gap-x-6">
						{{include('includes/button.twig', {
							data: {
								button: fields.button.button,
								variantStyle: fields.button.variant,
							}
						}, with_context = false)}}
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
