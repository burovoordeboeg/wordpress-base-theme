{#
  Macro for using SVG icons from a SVG symbol sprite
  Usage:
      {{ icon('name') }}
      {{ icon('name', {class: 'text-green-500', width: 64}) }}
#}


{% macro icon(name, type = 'solid', class = '') %}

	<svg class="icon icon-{{name}} {{sizeClass[size]}} {{ class }}">
		<use xlink:href="{{ get_template_directory_uri()}}/assets/icons/{{type}}-icons.svg#{{name}}"></use>
	</svg>

{% endmacro %}
