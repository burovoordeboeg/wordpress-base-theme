			}[spacing.padding.left] %}
			{% set padding = padding|merge([pl]) %}
		{% endif %}
		{% if spacing.padding.right %}
			{% set pr = {
				'10': 'pr-4 md:pr-6 lg:pr-8',
				'20': 'pr-8 md:pr-10 lg:pr-12 xl:pr-16',
				'30': 'pr-16 md:pr-20 lg:pr-24 xl:pr-32',
				'40': 'pr-24 md:pr-32 lg:pr-40 xl:pr-48',
				'50': 'pr-32 md:pr-40 lg:pr-48 xl:pr-56',
				'60': 'pr-40 md:pr-48 lg:pr-56 xl:pr-64',
				'70': 'pr-48 md:pr-56 lg:pr-64 xl:pr-72',
				'80': 'pr-56 md:pr-64 lg:pr-72 xl:pr-80',
			}[spacing.padding.right] %}
			{% set padding = padding|merge([pr]) %}
		{% endif %}

		{# Convert to string #}
		{% set padding = padding|join(' ') %}

		{# Return the values #}
		{{ padding|spaceless }}

	{% endif %}
{% endmacro %}

