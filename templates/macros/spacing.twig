{% macro padding(spacing) %}
	{% if spacing.padding %}
		{% set padding = [] %}
		{% if spacing.padding.top %}
			{% set pt = {
				'10': 'pt-4 md:pt-6 lg:pt-8',
				'20': 'pt-8 md:pt-10 lg:pt-12 xl:pt-16',
				'30': 'pt-16 md:pt-20 lg:pt-24 xl:pt-32',
				'40': 'pt-24 md:pt-32 lg:pt-40 xl:pt-48',
				'50': 'pt-32 md:pt-40 lg:pt-48 xl:pt-56',
				'60': 'pt-40 md:pt-48 lg:pt-56 xl:pt-64',
				'70': 'pt-48 md:pt-56 lg:pt-64 xl:pt-72',
				'80': 'pt-56 md:pt-64 lg:pt-72 xl:pt-80',
			}[spacing.padding.top] %}
			{% set padding = padding|merge([pt]) %}
		{% endif %}
		{% if spacing.padding.bottom %}
			{% set pb = {
				'10': 'pb-4 md:pb-6 lg:pb-8',
				'20': 'pb-8 md:pb-10 lg:pb-12 xl:pb-16',
