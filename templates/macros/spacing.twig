{% macro padding(spacing) %}
	{% if spacing.padding %}
		{% set padding = [] %}
		{% if spacing.padding.top %}
			{% set pt = {
				'10': 'pt-8',
				'20': 'pt-16',
				'30': 'pt-24',
				'40': 'pt-32',
				'50': 'pt-40',
				'60': 'pt-48',
				'70': 'pt-56',
				'80': 'pt-64',
			}[spacing.padding.top] %}
			{% set padding = padding|merge([pt]) %}
		{% endif %}
		{% if spacing.padding.bottom %}
			{% set pb = {
				'10': 'pb-8',
				'20': 'pb-16',
				'30': 'pb-24',
				'40': 'pb-32',
				'50': 'pb-40',
				'60': 'pb-48',
				'70': 'pb-56',
				'80': 'pb-64',
			}[spacing.padding.bottom] %}
			{% set padding = padding|merge([pb]) %}
		{% endif %}
		{% if spacing.padding.left %}
			{% set pl = {
				'10': 'pl-8',
				'20': 'pl-16',
				'30': 'pl-24',
				'40': 'pl-32',
				'50': 'pl-40',
				'60': 'pl-48',
				'70': 'pl-56',
				'80': 'pl-64',
			}[spacing.padding.left] %}
			{% set padding = padding|merge([pl]) %}
		{% endif %}
		{% if spacing.padding.right %}
			{% set pr = {
				'10': 'pr-8',
				'20': 'pr-16',
				'30': 'pr-24',
				'40': 'pr-32',
				'50': 'pr-40',
				'60': 'pr-48',
				'70': 'pr-56',
				'80': 'pr-64',
			}[spacing.padding.right] %}
			{% set padding = padding|merge([pr]) %}
		{% endif %}

		{# Convert to string #}
		{% set padding = padding|join(' ') %}

		{# Return the values #}
		{{ padding  }}

	{% endif %}

{% endmacro %}

