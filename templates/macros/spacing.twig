				'40': 'pb-24 md:pb-32 lg:pb-40 xl:pb-48',
				'50': 'pb-32 md:pb-40 lg:pb-48 xl:pb-56',
				'60': 'pb-40 md:pb-48 lg:pb-56 xl:pb-64',
				'70': 'pb-48 md:pb-56 lg:pb-64 xl:pb-72',
				'80': 'pb-56 md:pb-64 lg:pb-72 xl:pb-80',
			}[spacing.padding.bottom] %}
			{% set padding = padding|merge([pb]) %}
		{% endif %}
		{% if spacing.padding.left %}
			{% set pl = {
				'10': 'pl-4 md:pl-6 lg:pl-8',
				'20': 'pl-8 md:pl-10 lg:pl-12 xl:pl-16',
				'30': 'pl-16 md:pl-20 lg:pl-24 xl:pl-32',
				'40': 'pl-24 md:pl-32 lg:pl-40 xl:pl-48',
				'50': 'pl-32 md:pl-40 lg:pl-48 xl:pl-56',
				'60': 'pl-40 md:pl-48 lg:pl-56 xl:pl-64',
