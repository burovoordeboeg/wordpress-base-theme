{% set defaults = {
	data: {
		name: 'prose',
		content: null,
		columns: null,
	},
	classes: {
		root: 'prose max-w-none',
		custom: null,
	},
	columns: {
		2: 'lg:columns-2 gap-16',
		3: 'lg:columns-3 gap-16',
		4: 'lg:columns-2 xl:columns-4 gap-16',
	},
} %}

{% set props = {
	data: data is defined and data is iterable ? defaults.data | merge(data) : defaults.data,
	classes: classes is defined and classes is iterable ? defaults.classes | merge(classes) : defaults.classes,
	columns: defaults.columns,
} %}

{% if props.data.content %}
	<div data-component="{{props.data.name}}" class="{{props.classes.root}} {{props.columns[props.data.columns]}} {{props.classes.custom}}">
		{{props.data.content|raw}}
	</div>
{% endif %}
