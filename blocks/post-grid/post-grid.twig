{% extends "base/block.twig" %}

{% set context = {
	data: {
		columns: fields.columns|default('2'),
	},
	columns: {
		2:'grid-cols-1 md:grid-cols-2',
		3:'grid-cols-1 md:grid-cols-3',
		4:'grid-cols-1 md:grid-cols-4',
		5:'grid-cols-1 md:grid-cols-3 lg:grid-cols-5',
		6:'grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-6',
	}
} %}

{% block block_content %}

	<div class="grid {{context.columns[context.data.columns]}} gap-8">
		{% for post in fields.posts %}
			{{include('components/posts/post.twig')}}
		{% endfor %}
	</div>

{% endblock %}
