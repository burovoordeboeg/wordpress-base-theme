{% extends "base/block.twig" %}

{% set context = {
	data: {
		columns: fields.columns|default('2'),
	},
	columns: {
		2:'grid-cols-2',
		3:'grid-cols-3',
		4:'grid-cols-4',
		5:'grid-cols-5',
		6:'grid-cols-6',
	}
} %}

{% set allowed_blocks = [
	'acf/heading',
	'acf/wysiwyg',
	'acf/buttons',
	'acf/image'
] %}


{% block block_content %}

	<div class="grid {{context.columns[context.data.columns]}} gap-8">
		{% for post in fields.posts %}
			{{include('components/posts/post.twig')}}
		{% endfor %}
	</div>

{% endblock %}
