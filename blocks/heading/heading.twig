{% extends "base/block.twig" %}

{% set context = {
	data: {
		text: fields.heading.text|default('Klik hier voor een titel'),
		type: fields.heading.type|default('h2'),
		size: fields.heading.size|default('medium'),
		align_text: align_text|default('left')
	},
	size: {
		xsmall: 'text-lg mb-2',
		small: 'text-xl mb-4',
		medium: 'text-3xl mb-6',
		large: 'text-5xl mb-6',
		xlarge: 'text-7xl mb-6'
	},
	align_text: {
		left: 'text-left',
		center: 'text-center',
		right: 'text-right'
	}
} %}


{% block block_content %}
	<{{context.data.type}} class="{{context.size[context.data.size]}} {{context.align_text[context.data.align_text]}}">{{context.data.text}}</{{context.data.type}}>
{% endblock %}
