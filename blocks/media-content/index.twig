{% extends "base/block.twig" %}

{% set padding = reverse ? 'order-first pr-8' : 'pl-8' %}

{% set allowed_blocks = [
	'acf/media',
	'acf/content',
] %}

{% set template = [
	["acf/media"],
	["acf/content"],
] %}

{% block content %}

	<InnerBlocks class="innerblocks grid md:grid-cols-2" allowedBlocks={{ json_encode(allowed_blocks) }} template="{{ json_encode(template) }}" templateLock="all" />

{% endblock %}