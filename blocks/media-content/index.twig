{% import "macros/macro.twig" as macro %}

{% set template = [
    ['core/heading', {
        'level': 1,
        'placeholder': 'Heading goes here.',
        'align': 'center',
        'className': 'mt-24 text-4xl font-bold tracking-tight sm:mt-10 sm:text-6xl',
    }],
    ['core/paragraph', {
        'placeholder': 'Describe here.', 
        'align': 'left', 
        'className': 'mt-6 mr-12 text-lg leading-8',
    }],
	 ['core/buttons',{
		'className': 'mt-10',
	 },[
        ['core/button', {
			'placeholder': 'Placeholder text',
		}]
    ]]
] %}

{% set allowed_blocks = [
    'core/heading', 
    'core/paragraph',
    'core/buttons',
    'core/button',
] %}

{% set alignment = attributes.alignment.align %}

<div class="{{blockname}} {{blockname}}--{{alignment|default('small')}} {{attributes.class}} {{is_preview ? 'px-8'}}">
  <div class="lg:grid lg:grid-cols-12 lg:gap-x-8">
    <div class="lg:col-span-6">
		<InnerBlocks class="{{blockname}}__innerblocks" template="{{template|json_encode()|escape}}" allowedblocks="{{allowed_blocks|json_encode()|escape}}"  templatelock="all"/>
    </div>
    <div class="lg:col-span-6">
		{% if is_preview and fields.image == empty %}
			{{macro.preview('Add media')}}
			{% else %}
			{{macro.wpimage(fields.image, 'full', 'w-full bg-gray-50')}}
		{% endif %}
	</div>
  </div>
</div>
