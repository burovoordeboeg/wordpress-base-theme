{% import "macros/macro.twig" as macro %}

{% set data = {
	heading: fields.heading,
	logos: fields.logos
} %}

<div class="bg-slate-50 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <h2 class="text-center text-lg font-semibold leading-8 text-gray-900">{{data.heading}}</h2>
    <div class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      {% for item in data.logos %}
	  	{{macro.wpimage(item, 'full', 'col-span-2 max-h-12 w-full object-contain lg:col-span-1')}}
	  {% endfor %}
    </div>
  </div>
</div>
