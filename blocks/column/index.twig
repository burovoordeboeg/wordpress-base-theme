{% import "macros/macro.twig" as macro %}

{% set template = [
    ['core/heading', {
        'level': 3,
        'placeholder': 'Heading goes here.',
        'align': 'center',
        'className': '',
    }],
    ['core/paragraph', {
        'placeholder': 'Describe here.', 
        'align': 'left', 
        'className': '',
    }],
] %}

{% set allowed_blocks = [
    'core/heading', 
    'core/paragraph',
    'core/buttons',
    'core/button',
] %}

{% set alignment = attributes.alignment.align %}

<div class="{{blockname}} {{is_preview ? 'p-8 border border-dashed' : ''}}">
	<InnerBlocks class="{{blockname}}__innerblocks" template="{{template|json_encode()|escape}}" allowedblocks="{{allowed_blocks|json_encode()|escape}}" />
</div>