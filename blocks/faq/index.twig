{% import "macros/macro.twig" as macro %}

{% set template = [
    ['core/heading', {
        'level': 2,
        'placeholder': 'Heading goes here.',
        'align': 'center',
        'className': '',
    }],
    ['core/paragraph', {
        'placeholder': 'Describe here.', 
        'align': 'left', 
        'className': '',
    }],
] %}

{% set allowed_blocks = [
    'core/heading', 
    'core/paragraph',
] %}

{% set alignment = attributes.alignment.align %}


<div class="{{blockname}} {{blockname}}--{{alignment|default('small')}} {{attributes.class}} {{is_preview ? 'px-8' : ''}}">
  
    <div class="container lg:grid lg:grid-cols-12 lg:gap-16 py-24 sm:pt-32 lg:py-40">
      
	  <InnerBlocks class="lg:col-span-5" template="{{template|json_encode()|escape}}" allowedblocks="{{allowed_blocks|json_encode()|escape}}"  templatelock="all" />
      
	  <div class="mt-10 lg:col-span-7 lg:mt-0">
        
		{% if is_preview and fields.item == empty%}
			{{macro.preview('Add faq')}}
		{% else %}
			<dl class="space-y-10">
			{% for item in fields.item %}
				<div>
					<dt class="text-base font-semibold leading-7 text-gray-900">{{item.question}}</dt>
					<dd class="mt-2 text-base leading-7 text-gray-600">{{item.anwser}}</dd>
				</div>
			{% endfor %}
			</dl>
		{% endif %}
      </div>
    </div>


</div>

