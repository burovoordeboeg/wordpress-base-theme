{% set template = [
    ['core/heading', {
        'level': 1,
        'placeholder': 'Heading goes here.',
    }],
    ['core/paragraph', {
        'placeholder': 'Describe here.',
    }],
	 ['core/buttons',{
		'className': '',
		'lock': {
			'remove': false
		}
	 },[
        ['core/button', {
			'placeholder': 'Placeholder text',
		}]
    ]]
] %}

{% set allowed_blocks = [
    'core/heading', 
    'core/paragraph',
    'core/buttons',
    'core/button',
] %}

{% embed "embeds/media-content.twig" with {cover: fields.cover}%}
	
	{% block content %}
		<InnerBlocks class="py-12" template="{{template|json_encode()|escape}}" allowedblocks="{{allowed_blocks|json_encode()|escape}}"  />
	{% endblock %}
	
	{% block media %}
		{% include "components/wp-image.twig" with { id: fields.image, class: cover ? 'w-full h-full object-cover' } %}
	{% endblock %}

{% endembed %}
