{% extends "base/block.twig" %}

{% set allowed_blocks = [
	'acf/media',
	'acf/content',
] %}

{% set template = [
	["acf/media"],
	["acf/content"],
] %}


{% set align = {
	'top': 'items-start',
	'center': 'items-center',
	'bottom': 'items-end',
} %}


{% block content %}

	<InnerBlocks class="grid grid-cols-2 {{align[attributes.alignment.aligncontent]}}" allowedBlocks={{ json_encode(allowed_blocks) }} template="{{ json_encode(template) }}"  />

{% endblock %}