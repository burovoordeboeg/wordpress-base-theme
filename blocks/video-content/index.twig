{% import "macros/macro.twig" as macro %}

{% set template = [
    ['core/heading', {
        'level': 1,
        'placeholder': 'Heading goes here.',
        'align': 'center',
        'className': '',
    }],
    ['core/paragraph', {
        'placeholder': 'Describe here.', 
        'align': 'left', 
        'className': '',
    }],
	 ['core/buttons',{
		'className': '',
		'lock': {
			'remove': false
		}
	 },[
        ['core/button', {
			'placeholder': 'Placeholder text',
			'lock': {
				'remove': false
			}
		}]
    ]]
] %}

{% set allowed_blocks = [
    'core/heading', 
    'core/paragraph',
    'core/buttons',
    'core/button',
] %}

{% set alignment = attributes.alignment.align %}
{% set valign = {
	top : 'items-start',
	center : 'items-center',
	bottom : 'items-end',
} %}



<div class="{{blockname}} {{blockname}}--{{alignment|default('small')}} {{attributes.class}} {{is_preview ? 'px-8' : ''}}">
  <div class="container lg:grid lg:grid-cols-12 lg:gap-x-8 {{valign[attributes.alignment.aligncontent]|default('items-center')}}">
    <div class="lg:col-span-6">
		<InnerBlocks class="{{blockname}}__innerblocks" template="{{template|json_encode()|escape}}" allowedblocks="{{allowed_blocks|json_encode()|escape}}"  templatelock="all"/>
    </div>
    <div class="lg:col-span-6 relative">
		{% if is_preview %}
			
			{{fields != '' ? macro.video(fields, 'w-full ') : macro.preview('Add media')}}
			
			{% else %}
			
			{% if fields %}
				{{macro.video(fields, 'w-full ')}}
			{% endif %}
			
		{% endif %}
	</div>
  </div>
</div>
