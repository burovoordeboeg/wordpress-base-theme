{% import "macros/macro.twig" as macro %}

{% set template = [
    ['core/heading', {
        'level': 1,
        'placeholder': 'Heading goes here.',
        'align': 'center',
        'className': '',
    }],
    ['core/paragraph', {
        'placeholder': 'Describe here.', 
        'align': 'left', 
        'className': '',
    }],
	 ['core/buttons',{
		'className': '',
		'lock': {
			'remove': false
		}
	 },[
        ['core/button', {
			'placeholder': 'Placeholder text',
			'lock': {
				'remove': false
			}
		}]
    ]]
] %}

{% set allowed_blocks = [
    'core/heading', 
    'core/paragraph',
    'core/buttons',
    'core/button',
] %}

{% embed "embeds/media-content.twig" with {cover: fields.video_options.cover}%}

	{% block content %}
		<InnerBlocks class="py-12" template="{{template|json_encode()|escape}}" allowedblocks="{{allowed_blocks|json_encode()|escape}}" templatelock="all" />
	{% endblock %}

	{% block media %}
		{% include "components/wp-video.twig" with { data: fields, class: cover ? 'w-full h-full object-cover' } %}
	{% endblock %}

{% endembed %}
