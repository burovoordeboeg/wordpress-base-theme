{% extends "base/block.twig" %}

{# Import macros #}
{% import "macros/media.twig" as media %}
{% import "macros/buttons.twig" as button %}
{% import "macros/typography.twig" as type %}

{% block content %}
	<div class="lg:grid lg:grid-cols-12 lg:gap-x-16 ">

		<div class="lg:col-span-7 xl:col-span-6 {{fields.reverse ? 'lg:col-start-6 xl:col-start-7'}}">

			<div class="">

				{{type.heading(fields.heading)}}

				{% if fields.copy %}
					<div class="prose max-w-none">
						{{fields.copy|raw}}
					</div>
				{% endif %}

				{% if fields.button %}
					<div class="flex items-center gap-x-6">
						{{button.main(fields.button.button, fields.button.variant)}}
					</div>
				{% endif %}

			</div>
		</div>

		<div class="relative lg:col-span-5 xl:col-span-6 {{ fields.video_options.cover ? 'xl:absolute xl:inset-0'}} {{fields.reverse ? 'lg:-ml-8 lg:col-start-1 lg:row-start-1 xl:right-1/2 xl:ml-0' : 'lg:-mr-8  xl:left-1/2 xl:mr-0'}}">
			{{media.videoUrl(fields.video_url,  fields.video_options, '', is_preview) }}
		</div>

	</div>
{% endblock %}
