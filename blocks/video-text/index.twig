
{% import "macros/macro.twig" as macro %}

{% set data = {
	title: fields.title,
	copy: fields.copy,
	button: fields.button,
	reversed: fields.reverse,
	video_type: fields.video_type,
	video_url: fields.video_url,
	video_oembed: fields.video_oembed,
	video_options: fields.video_options
} %}

<div class="relative bg-green-50">
  <div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-16 lg:px-8">
   
    <div class="px-6 pb-24 pt-10 sm:pb-32 lg:col-span-7 lg:px-0 lg:pb-56 lg:pt-48 xl:col-span-6  {{data.reversed ? 'lg:col-start-6 xl:col-start-7'}}">
      <div class="mx-auto max-w-2xl lg:mx-0">
        
		<h1 class="mt-24 text-4xl font-bold tracking-tight text-gray-900 sm:mt-10 sm:text-6xl">{{data.title|raw}}</h1>
        
		{% if data.copy %}
			<div class="mt-6 text-lg leading-8 text-gray-600">{{data.copy|raw}}</div>
        {% endif %}
		
		{% if data.button %}
			<div class="mt-10 flex items-center gap-x-6">
				<a href="{{data.button.url}}" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">{{data.button.title}}</a>
			</div>
		{% endif %}
      
	  </div>
    </div>
    
	<div class="relative lg:col-span-5 xl:col-span-6 {{data.video_options.cover ? 'xl:absolute xl:inset-0'}}  {{data.reversed ? 'lg:-ml-8 lg:col-start-1 lg:row-start-1 xl:right-1/2 xl:ml-0' : 'lg:-mr-8  xl:left-1/2 xl:mr-0'}}">
		{{macro.videoUrl(data.video_url, data.video_options) }}
	</div>
	
  </div>
</div>
