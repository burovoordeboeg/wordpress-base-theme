{% import "macros/media.twig" as media %}
{% import "macros/buttons.twig" as button %}

<div data-block-id="{{ blockname }}" class="relative bg-gray-50">
	<div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-16 lg:px-8">

		<div class="px-6 pb-24 pt-10 sm:pb-32 lg:col-span-7 lg:px-0 lg:pb-56 lg:pt-48 xl:col-span-6 {{fields.reverse ? 'lg:col-start-6 xl:col-start-7'}}">

			<div class="mx-auto max-w-2xl lg:mx-0">

				<h1 class="mt-24 text-4xl font-bold tracking-tight text-gray-900 sm:mt-10 sm:text-6xl">{{fields.title|raw}}</h1>

				{% if fields.copy %}
					<div class="mt-6 text-lg leading-8 text-gray-600">{{fields.copy|raw}}</div>
				{% endif %}

				{% if data.button %}
					<div class="mt-10 flex items-center gap-x-6">
						{{button.main(item.button, item.variant)}}
					</div>
				{% endif %}

			</div>
		</div>

		<div class="relative lg:col-span-5 xl:col-span-6 {{ fields.video_options.cover ? 'xl:absolute xl:inset-0'}} {{fields.reverse ? 'lg:-ml-8 lg:col-start-1 lg:row-start-1 xl:right-1/2 xl:ml-0' : 'lg:-mr-8  xl:left-1/2 xl:mr-0'}}">
			{{media.videoUrl(fields.video_url,  fields.video_options, '', is_preview) }}
		</div>

	</div>
</div>
