{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"layout": {
			"contentSize": "768px",
			"wideSize": "1024px"
		},
		"color": {
      	"link": true,
			"defaultPalette": false,
			"palette": [
				{
					"slug": "white",
					"color": "#FFFFFF",
					"name": "Wit"
				},
				{
					"slug": "yellow",
					"color": "#D3A403",
					"name": "Geel"
				},
				{
					"slug": "brightblue",
					"color": "#009FE3",
					"name": "Licht Blauw"
				},
				{
					"slug": "secondaryblue",
					"color": "#00FF00",
					"name": "Secundair blauw"
				},
				{
					"slug": "mediumblue",
					"color": "#004B8C",
					"name": "Medium Blauw"
				},
				{
					"slug": "black",
					"color": "#000000",
					"name": "Zwart"
				}
			]
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{
					"size": "1rem",
					"slug": "small",
					"name": "small"
				},
				{ 
					"size": "2rem",
					"slug": "medium",
					"name": "medium" 
				},
				{
					"size": "3rem",
					"slug": "large",
					"name": "large"
				}
			]
		}
	}
}
